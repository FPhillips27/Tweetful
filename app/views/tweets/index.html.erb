<%= render :partial => 'shared/left_nav' %>
<h3 style="margin-left: 1em">Recent Tweets</h3>
<ol class="list-unstyled">
  <% @tweets.each do |tweet| %>
    <li>
      <%= content_tag :strong, tweet.user.name, class: 'fullName' %>
      <%= content_tag :small, "@"+tweet.user.username, class: 'userName' %>
      <%= content_tag :small, tweet.created_at.strftime("%b %-d"), class: 'createdAt' %>
      <%= content_tag :p, tweet.content, class:'tweetContent' %>
    </li>
    <li><hr></li>
  <% end %>
</ol>